<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <woowacourse.paint.custom.view.CanvasView
        android:id="@+id/custom_canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toTopOf="@id/btn_color_change"
        app:layout_constraintEnd_toStartOf="@id/btn_orange"
        app:layout_constraintStart_toStartOf="@id/btn_color_change" />

    <Button
        android:id="@+id/btn_orange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintEnd_toStartOf="@id/btn_yellow"
        app:layout_constraintStart_toEndOf="@id/btn_red" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintEnd_toStartOf="@id/btn_green"
        app:layout_constraintStart_toEndOf="@id/btn_orange" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintEnd_toStartOf="@id/btn_blue"
        app:layout_constraintStart_toEndOf="@id/btn_yellow" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintEnd_toEndOf="@id/btn_thickness_change"
        app:layout_constraintStart_toEndOf="@id/btn_green" />

    <Button
        android:id="@+id/btn_color_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/color_change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_thickness_change"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_thickness_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/thickness_change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_color_change" />

</androidx.constraintlayout.widget.ConstraintLayout>
